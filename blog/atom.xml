---
layout: feed
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>Mark Hall's Blog</title>
	<link href="http://markhall.co/blog/atom.xml" rel="self"/>
	<link href="markhall.co/blog"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>http://markhall.co/blog</id>
	<author>
		<name>Mark Hall</name>
		<email>hall_mark@icloud.com</email>
	</author>

	{% for post in site.posts %}
		<entry>
			<title>{{ post.title }}</title>
			<link href="http://markhall.co{{ post.url }}"/>
			<updated>{{ post.date | date_to_xmlschema }}</updated>
			<id>http://markhall.co/{{ post.id }}</id>
			<content type="html">{{ post.content | xml_escape }}</content>
		</entry>
	{% endfor %}

</feed>
